{
  "extends": "../../tsconfig.json",
  // TS Config used by Next to build the frontend of the application.
  "compilerOptions": {
    "target": "ES2019",
    "removeComments": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "inlineSourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./build",
    "paths": {
      "@/*": ["/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["lib/utils/*"],
      "@builders/*": ["lib/builders/*"],
      "@models/*": ["lib/models/*"],
      "@src/*": ["src/*"],
      "@components/*": ["components/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "build"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts",
    "**/*.js",
    "**/*.jsx"
  ]
}
